@model IEnumerable<ApplicationUser>

@{
    Layout = "_Layout";
}
<div class="p-4"></div>
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">User List</h2>
    </div>
    <div class="col-6">
        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">
            <i class="fas fa-plus"></i>
            &nbsp; Create New User
        </a>
    </div>
</div>
<div class="p-4"></div>

<div class="p-4 border rounded">
    <table id="tblUser" class="table table-striped table-bordered table-auto">
        <thead class="thead-dark">
        <tr class="table-info">
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Company</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
        </thead>
    </table>
</div>

@section Scripts
{
    <script src="~/js/user.js"></script>
}
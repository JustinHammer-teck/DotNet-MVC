@model IEnumerable<ProductVM>

@{
    Layout = "_Layout";
}
<div class="p-4"></div>
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Product List</h2>
    </div>
    <div class="col-6">
        <a class="btn btn-primary" asp-action="Upsert">
            <i class="fas fa-plus"></i>
            &nbsp; Create New Product
        </a>
    </div>
</div>
<div class="p-4"></div>

<div class="p-4 border rounded">
    <table id="tblProduct" class="table table-striped table-bordered table-auto">
        <thead class="thead-dark">
        <tr class="table-info">
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Author</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
        </thead>
    </table>
</div>

@section Scripts
{
    <script src="~/js/product.js"></script>
}
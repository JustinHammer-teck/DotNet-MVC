@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="text-center">
        <h1 class="display-4">Welcome To My Project</h1>
        <p>Something has change in me</p>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>
    <div class="container">
        <div class="row">
            @foreach (Product item in Model)
            {
                <div class="col-3">
                    <div class="card">
                        <div class="card-header">
                            <img class="card-img" src="@item.ImageUrl" alt="Product Image">
                        </div>
                        <div class="card-body">
                            <h3 class="card-title">@item.Title</h3>
                            <p class="card-text">@item.Description</p>
                            <p>
                                List Price:
                                <strike>
                                    <b class=""> @item.ListPrice.ToString() VND</b>
                                </strike>
                            </p>
                            <p style="color: maroon">As low as: <b>@item.Price100.ToString() VND</b></p>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary form-control">
                                <b>Detail</b>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>